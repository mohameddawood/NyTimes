<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/rateItem"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">

    <TextView
        android:drawableStart="@drawable/ic_baseline_monetization_on_24"
        android:id="@+id/tv_rate_name"
        app:layout_constraintTop_toTopOf="parent"
        android:drawablePadding="@dimen/sp8"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp50h"
        android:layout_marginStart="@dimen/dp21w"
        android:gravity="center"
        android:text="333"
        android:layout_marginTop="@dimen/dp4h"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/sp17"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_marginTop="@dimen/dp4h"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/tv_rate_value"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp50h"
        android:layout_marginEnd="@dimen/dp21w"
        android:gravity="center"
        android:text="333"
        android:textColor="@color/colorRed"
        android:textSize="@dimen/sp16"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="0dp" />
    <View

        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#eee"
        android:layout_width="match_parent"
        android:layout_height="4dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>